  </head>
  <body>
    <div class="main">
      <div class="main_left">
        <div class="main_videos">
          <div id="video-grid"></div>
        </div>
        <div class="main_controls">
          <div class="main_controls_block">
            <div onclick="muteUnmute()" class="main_controls_button main_mute_button">
              <i class="fa-solid fa-microphone-lines"></i>
              <span>Mute</span>
            </div>
            <div onclick="playStop()" class="main_controls_button main_video_button">
              <i class="fa-solid fa-video"></i><span>Stop Video</span>
            </div>
          </div>
          <div class="main_controls_block">
            <div class="main_controls_button">
              <i class="fa-solid fa-shield-heart"></i>
              <span>Security</span>
            </div>
            <div class="main_controls_button">
              <i class="fa-solid fa-user-group"></i><span>Participants</span>
            </div>
            <div class="main_controls_button">
              <i class="fa-solid fa-comment"></i><span>Chat</span>
            </div>
          </div>
          <div class="main_controls_block">
            <div class="main_controls_button">
              
              <span class="leave_meeting">Leave Meeting</span>
            </div>
          </div>
        </div>
      </div>
      <div class="main_right">
        <div class="main_header">
          <h6>CHAT</h6>
        </div>
        <div class="main_chat_window">
          <ul class="messages">
              
          </ul>
        </div>
        <div class="main_message_container">
          <input type="text"  id="chat_message" placeholder="Type message here...">
        </div>

      </div>
    </div>
    <script src="script.js"></script>
  </body>
</html>
